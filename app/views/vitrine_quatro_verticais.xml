			</View>
			<View class="guia">
				<ImageView class="botaoPrimeiro" onClick="primeiro"></ImageView>
				<ImageView class="botaoAnterior" onClick="anterior"></ImageView>
				<Button id="paginacao" class="paginacao">1/1</Button>
				<ImageView class="botaoProximo" onClick="proximo"></ImageView>
				<ImageView class="botaoUltimo" onClick="ultimo"></ImageView>
			</View>
			<View class="carrinho">
				<ImageView class="botaoCesta" onClick="cesta"></ImageView>
				<Button id="quantidade" class="quantidade">0</Button>
			</View>
		</View>
	</View>
</Alloy>